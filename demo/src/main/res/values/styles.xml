<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="SliderLayout">
        <item name="pager_animation">FlipHorizontal</item>
        <item name="auto_cycle">true</item>
        <item name="indicator_visibility">visible</item>
        <item name="pager_animation_span">1100</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="PagerIndicator">
        <item name="selected_color">#F8B089</item>
        <item name="unselected_color">@color/white</item>
        <item name="shape">oval</item>
        <item name="selected_padding_left">4dp</item>
        <item name="unselected_padding_left">4dp</item>
        <item name="selected_padding_right">4dp</item>
        <item name="unselected_padding_right">4dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="selected_width">@dimen/pager_indicator_size</item>
        <item name="selected_height">@dimen/pager_indicator_size</item>
        <item name="unselected_width">@dimen/pager_indicator_size</item>
        <item name="unselected_height">@dimen/pager_indicator_size</item>
    </style>

    <color name="white">#FFFFFF</color>
    <dimen name="pager_indicator_size">10dp</dimen>
</resources>
